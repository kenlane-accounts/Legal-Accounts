<div class="modal-dialog modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">X</button>
      <h4 class="modal-title">Allocate</h4>
    </div>

    <div class="modal-body">
      <%= simple_form_for @batch_allocation, url: allocations_path, remote: true, html: { class: 'form-horizontal' } do |f| %>
        <div id="batch_allocation_errors">
          <%= render 'shared/error_messages', object: @batch_allocation %>
        </div>

        <%= f.input :receipt_tran_id, as: :hidden %>

        <div class="row">
          <div class="col-md-2">
            Amount Received
          </div>
          <div class="col-md-2">
            <%= @batch_allocation.receipt_tran.tramount %>
          </div>
          <div class="col-md-1">
            Allocated
          </div>
          <div class="col-md-2">
            <%= @batch_allocation.receipt_tran.allocated %>
          </div>
          <div class="col-md-2">
            Amount to Allocate
          </div>
          <div id="receipt_to_alloc" class="col-md-2" data-to-alloc="<%= @batch_allocation.receipt_tran.tramount - @batch_allocation.receipt_tran.allocated %>">
            <%= @batch_allocation.receipt_tran.tramount - @batch_allocation.receipt_tran.allocated %>
          </div>
          <div class="col-md-1">
            <%= button_tag id: 'autoallocate', class: 'btn btn-default', type: 'button' do %>
              <span class="glyphicon glyphicon-fullscreen"></span>
            <% end %>
          </div>
        </div>

        <table class="table">
          <thead>
          <tr>
            <th>Date</th>
            <th>Invoice #</th>
            <th>Details</th>
            <th>Nominal</th>
            <th>Case Ref.</th>
            <th>Client</th>
            <th>Fees</th>
            <th>Outlay</th>
            <th>Total</th>
            <th>To Alloc</th>
            <th>Alloc Amount</th>
            <th>Allocated</th>
            <th>VAT</th>
          </tr>
          </thead>
          <%= f.simple_fields_for :allocations do |a| %>
            <%= render 'allocation_fields', f: a %>
          <% end %>
        </table>
        <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>

  </div>
</div>